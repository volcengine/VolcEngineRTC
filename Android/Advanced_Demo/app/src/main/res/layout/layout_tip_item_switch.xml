<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height">

        <TextView
            android:id="@+id/left_tv"
            style="@style/LayoutItemLeftText"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/left_tip_tv"
            android:layout_width="wrap_content"
            android:textColor="#B2B2B2"
            android:textSize="10dp"
            android:layout_alignLeft="@id/left_tv"
            android:layout_below="@id/left_tv"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switch_lg"
            style="@style/SwitchLg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_item_margin" />
    </RelativeLayout>

    <View style="@style/DividerLine" />
</LinearLayout>
