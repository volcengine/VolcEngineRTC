<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height">

        <TextView
            android:id="@+id/left_tv"
            style="@style/LayoutItemLeftText"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/left_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_tv"
            android:layout_alignLeft="@id/left_tv"
            android:textColor="#B2B2B2"
            android:textSize="10dp" />

        <RadioGroup
            android:id="@+id/video_source_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_item_margin"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/video_source_camera_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_H3_14sp"
                android:textColor="@color/black"
                android:text="@string/video_source_camera" />

            <RadioButton
                android:id="@+id/video_source_screen_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/txt_H3_14sp"
                android:textColor="@color/black"
                android:text="@string/video_source_screen" />

        </RadioGroup>

    </RelativeLayout>

    <View style="@style/DividerLine" />
</LinearLayout>
